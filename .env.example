# ============================================
# Algym247 Management App - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ============================================
# FIREBASE CONFIGURATION (Client-side)
# ============================================
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# FIREBASE ADMIN SDK (Server-side)
# ============================================
# Get these from Firebase Console > Project Settings > Service Accounts
# Download the private key JSON and extract these values
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# Note: The private key should be the entire key including -----BEGIN PRIVATE KEY----- and -----END PRIVATE KEY-----
# Make sure to include the \n characters for line breaks
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# ============================================
# SUPABASE (Legacy - for migration)
# ============================================
# These are optional if you're only using Firebase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# MONDAY.COM INTEGRATION
# ============================================
# Get your API token from Monday.com > Profile > Admin > Developers > My Access Tokens
MONDAY_API_TOKEN=your-monday-api-token

# Board IDs - Get these from the URL when viewing each board
# URL format: https://your-workspace.monday.com/boards/BOARD_ID
MONDAY_MEMBERS_BOARD_ID=your-members-board-id
MONDAY_CONTRACTS_BOARD_ID=your-contracts-board-id
MONDAY_PAYMENTS_BOARD_ID=your-payments-board-id
MONDAY_EMPLOYEES_BOARD_ID=your-employees-board-id
MONDAY_INVENTORY_BOARD_ID=your-inventory-board-id
MONDAY_SCHEDULE_BOARD_ID=your-schedule-board-id

# Webhook secret for verifying incoming webhooks from Monday
# Generate a strong random string (32+ characters recommended)
# You'll use this when setting up webhooks in Monday.com
MONDAY_WEBHOOK_SECRET=your-webhook-secret-min-32-chars

# ============================================
# FISERV PAYMENT GATEWAY
# ============================================
# Get these from your Fiserv merchant portal
FISERV_MERCHANT_ID=your-merchant-id
FISERV_API_KEY=your-fiserv-api-key
FISERV_API_SECRET=your-fiserv-api-secret

# Webhook secret for verifying Fiserv webhook signatures
FISERV_WEBHOOK_SECRET=your-fiserv-webhook-secret

# ============================================
# APPLICATION SETTINGS
# ============================================
# Base URL of your application (used for generating payment links, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Sync settings
SYNC_ENABLED=true
SYNC_MODE=bidirectional  # Options: bidirectional, firebase_to_monday, monday_to_firebase

# ============================================
# DEVELOPMENT SETTINGS (optional)
# ============================================
# Set to 'development' for verbose logging
NODE_ENV=development

# Enable debug mode for Monday API calls
MONDAY_DEBUG=false
