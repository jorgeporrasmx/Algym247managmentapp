# ========================================
# FIREBASE CONFIGURACIÓN (REQUERIDO)
# ========================================

# Firebase Client SDK (Frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXX

# Firebase Admin SDK (Backend/Server) - Opcional, para operaciones avanzadas
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ========================================
# MONDAY.COM (REQUERIDO para sincronización)
# ========================================
# Token de API de Monday.com (obtener en monday.com > Admin > API)
MONDAY_API_TOKEN=your-monday-api-token

# Board IDs de Monday.com (obtener de la URL del tablero)
MONDAY_MEMBERS_BOARD_ID=123456789
MONDAY_PRODUCTS_BOARD_ID=987654321
MONDAY_EMPLOYEES_BOARD_ID=111222333
MONDAY_CONTRACTS_BOARD_ID=444555666
MONDAY_PAYMENTS_BOARD_ID=777888999

# Webhook secret para verificar llamadas de Monday (opcional)
MONDAY_WEBHOOK_SECRET=your-webhook-secret

# ========================================
# SUPABASE (OPCIONAL - Legacy)
# ========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ========================================
# APLICACIÓN
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ========================================
# SEGURIDAD
# ========================================
# Secret para firmar tokens de sesión (generar con: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# Secret para permitir seed en producción (generar con: openssl rand -hex 16)
SEED_SECRET_KEY=your-seed-secret-key
